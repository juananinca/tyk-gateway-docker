{
  "components": {
    "schemas": {
      "Response": {
        "properties": {
          "message": {
            "example": "Hello from default-service!",
            "type": "string"
          },
          "timestamp": {
            "example": "2024-01-15T10:30:00Z",
            "format": "date-time",
            "type": "string"
          }
        },
        "type": "object"
      },
      "StatusResponse": {
        "properties": {
          "status": {
            "example": "ok",
            "type": "string"
          },
          "uptime": {
            "example": "1h30m45s",
            "type": "string"
          },
          "version": {
            "example": "1.0.0",
            "type": "string"
          }
        },
        "type": "object"
      }
    }
  },
  "info": {
    "description": "Simple service API with hello and status endpoints",
    "title": "Animal API",
    "version": "1.0.0"
  },
  "openapi": "3.0.3",
  "paths": {
    "/hello": {
      "get": {
        "description": "Returns a greeting message from the service",
        "operationId": "getHello",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            },
            "description": "Successful response"
          }
        },
        "summary": "Get hello message"
      }
    },
    "/status": {
      "get": {
        "description": "Returns the current status and uptime of the service",
        "operationId": "getStatus",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StatusResponse"
                }
              }
            },
            "description": "Successful response"
          }
        },
        "summary": "Get service status"
      }
    },
    "/submit": {
      "post": {
        "description": "Submits a new animal record to the service",
        "operationId": "submitAnimal",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "field1": {
                    "example": 123,
                    "type": "number"
                  },
                  "field2": {
                    "example": "hola",
                    "type": "string"
                  }
                },
                "required": [
                  "field1",
                  "field2"
                ],
                "type": "object"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Response"
                }
              }
            },
            "description": "Animal created"
          },
          "400": {
            "description": "Invalid input"
          },
          "500": {
            "description": "Server error"
          }
        },
        "summary": "Submit animal data"
      }
    }
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8080/animal"
    },
    {
      "description": "Local server",
      "url": "http://animalservice:18080"
    }
  ],
  "x-tyk-api-gateway": {
    "info": {
      "id": "f4353099e04d42308b82d4fdc17a5a52",
      "name": "Animal API",
      "state": {
        "active": true
      }
    },
    "upstream": {
      "url": "http://animalservice:18080"
    },
    "server": {
      "authentication": {
        "enabled": true,
        "hmac": {
          "enabled": true,
          "header": {
            "enabled": true,
            "name": "Authorization"
          },
          "allowedAlgorithms": [
            "hmac-sha256",
            "hmac-sha1"
          ],
          "allowedClockSkew": 0
        }
      },
      "listenPath": {
        "value": "/animal",
        "strip": true
      }
    },
    "middleware": {
      "global": {
        "contextVariables": {
          "enabled": true
        },
        "trafficLogs": {
          "enabled": true
        }
      },
      "operations": {
        "submitAnimal": {
          "validateRequest": {
            "enabled": true,
            "errorResponseCode": 422
          }
        },
        "getHello": {
          "rateLimit": {
            "enabled": true,
            "rate": 10,
            "per": "1m"
          }
        }
      }
    }
  }
}
